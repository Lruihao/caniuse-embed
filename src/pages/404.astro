---
import Layout from '../layouts/Layout.astro'
import FeatureFooter from '../components/FeatureFooter.astro'

---

<Layout title="Page Not Found" source="">
  <main class="container">
    <h1>CanIUse Embed - Feature Not Found</h1>
    <FeatureFooter source="" />
  </main>
</Layout>

<style is:global>
*, *:before, *:after {
  box-sizing: border-box;
}
html,body {
  margin: 0;
  padding: 0;
  height: 100%;
}
.container {
  background-color: #f2e8d5;
  position: relative;
  border: 1px solid #C75000;
  border-bottom: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
h1 {
  font-size: 20px;
  margin: 0;
  padding: 10px 10px 0;
}

footer {
  padding: 5px 10px;
  margin-top: 20px;
  background-color: #C75000;
  color: rgba(255,255,255,0.7);
  font-size: 12px;
}

footer a {
  color: #f2e8d5;
  text-decoration: none;
}
</style>
