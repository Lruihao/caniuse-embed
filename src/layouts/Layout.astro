---
interface Props {
  title: string
  source: string
}

const { title, source } = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Can I Use Embed" />
    <meta
      name="viewport"
      content="width=device-width; initial-scale=1; user-scalable=no"
    />
    <link rel="icon" type="image/png" href="/favicon-128.png" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,600"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Can I use</title>
  </head>
  <body class={source}>
    <slot />
  </body>
</html>
